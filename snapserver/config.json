{
  "name": "Snapserver",
  "version": "0.0.1",
  "slug": "snapserver",
  "description": "Snapcast server",
  "url": "https://github.com/uspike/selleronom/hassio-addons/tree/master/snapserver",
  "ingress": true,
  "ingress_entry": "index.html",
  "startup": "services",
  "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_dbus": true,
  "ports": {
    "1704/tcp": 1704,
    "1705/tcp": 1705,
    "1780/tcp": 1780
  },
  "ports_description": {
    "1704/tcp": "Snapcast server port",
    "1705/tcp": "Snapcast TCP control port (set empty to disable)",
    "1780/tcp": "Snapcast HTTP control port (set empty to disable)"
  },
  "map": ["share:rw"],
  "options": {
    "stream": {
      "streams": [
        "spotify://librespot?name=Spotify&username=<USERNAME>&password=<PASSWORD>&devicename=Snapcast&bitrate=320"
      ],
      "buffer": "1000",
      "codec": "flac",
      "send_to_muted": "false",
      "sampleformat": "48000:16:2"
    },
    "tcp": {
      "enabled": "true"
    },
    "logging": {
      "enabled": "false"
    },
    "server": {
      "threads": "-1",
      "datadir": "/share/snapcast/"
    }
  },
  "schema": {
    "stream": {
      "streams": ["str"],
      "buffer": "int",
      "codec": "str",
      "send_to_muted": "str",
      "sampleformat": "str"
    },
    "tcp": {
      "enabled": "str"
    },
    "logging": {
      "enabled": "str"
    },
    "server": {
      "threads": "int",
      "datadir": "str"
    }
  }
}
