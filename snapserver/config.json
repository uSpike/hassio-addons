{
  "name": "Snapserver",
  "version": "0.0.6",
  "slug": "snapserver",
  "description": "Snapcast server",
  "url": "https://github.com/uspike/selleronom/hassio-addons/tree/master/snapserver",
  "ingress": true,
  "ingress_entry": "index.html",
  "startup": "services",
  "arch": ["amd64", "i386", "armhf", "armv7", "aarch64"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_dbus": true,
  "host_network": true,
  "map": ["share:rw"],
  "options": {
    "stream": {
      "streams": [
        "librespot://librespot?name=Spotify&username=<USERNAME>&password=<PASSWORD>&devicename=Snapcast&bitrate=320"
      ],
      "buffer": "1000",
      "codec": "flac",
      "send_to_muted": "false",
      "sampleformat": "48000:16:2"
    },
    "tcp": {
      "enabled": "true"
    }
  },
  "schema": {
    "stream": {
      "streams": ["str"],
      "buffer": "int",
      "codec": "str",
      "send_to_muted": "str",
      "sampleformat": "str"
    },
    "tcp": {
      "enabled": "str?"
    },
    "logging": {
      "enabled": "str?"
    },
    "server": {
      "threads": "int?"
    }
  }
}
